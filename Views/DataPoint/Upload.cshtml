@{
    ViewData["Title"] = "Upload DataPoints";
}

<h1>Upload from File</h1>

<div>
    <h4>DataPoint</h4>
    <hr />
    @{
        if(ViewBag.Upload.Equals('F'))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @ViewBag.Message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        if(ViewBag.Upload.Equals('S'))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @ViewBag.Message
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
            </div>
        }
    }
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="DataPoint" asp-action="Upload" method="post" enctype="multipart/form-data">
                <div class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">URL to DataFile</label>
                    <input id="files" class="form-control" type="file" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
