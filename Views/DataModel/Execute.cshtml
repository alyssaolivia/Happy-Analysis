@model Happy_Analysis.Models.ModelRun

@{
    ViewData["Title"] = "Execute";
}

<h1>Execute</h1>

<h4>Model</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Execute">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReferencePoint" class="control-label"></label>
                <input asp-for="ReferencePoint" class="form-control" />
                <span asp-validation-for="ReferencePoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Run_Date" class="form-control" value="@DateTime.Now" />
            </div>
            <div class="form-group">
                <input type="submit" value="Run" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>
